+				}
+				owner = &guid;
+				argv += 2;
+				argc -= 2;
+			} else {
+				usage(progname);
 				exit(1);
 			}
-			owner = &guid;
-			argv += 2;
-			argc -= 2;
 		} else if (strcmp("-t", argv[1]) == 0) {
 			timestampstr = argv[2];
 			argv += 2;
